{% for feature in featured %}
<div class="bg-white mr-5 rounded grid grid-rows-2">
    <figure class="mb-4">
        <img src="{{ feature.img_url }}" alt="{{ feature.img_alt_text }}" class="content-fill">
    </figure>
    <div class="grid grid-flow-row p-5">
        <h3 class="text-2xl font-bold text-green-800">{{ feature.card_header }}</h3>
        <p class="bg-white text-sm text-black">{{ feature.card_desc }}</p>
        <button class="">
            <a href="{{ feature.link }}" class="text-white py-2 px-4 rounded transition-colors ease-in-out bg-blue-500 hover:bg-blue-700 duration-300">Read More</a>
        </button>
    </div>
</div>
{% endfor %}