{% for feature in featured %}
<div class="group bg-white rounded grid grid-rows-2 not-prose">
    <figure class="mx-auto mt-6 overflow-hidden group-hover:rounded-md duration-700">
        <img src="{{ feature.img_url }}" alt="{{ feature.img_alt_text }}" class="aspect-video group-hover:scale-125 group-hover:z-10 duration-700">
    </figure>
    <div class="grid place-items-center px-4">
        <h3 class="text-2xl font-bold text-green-900">{{ feature.card_header }}</h3>
        <p class="text-black text-center sm:text-sm lg:text-sm">{{ feature.card_desc }}</p>
        <a href="{{ feature.link }}" class="text-white text-lg py-4 px-6 rounded transition-colors ease-in-out bg-blue-700 hover:bg-blue-900 duration-300">Read More</a>
    </div>
</div>
{% endfor %}